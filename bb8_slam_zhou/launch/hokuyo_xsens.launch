<launch>
  <arg name="mymap_file" default="/home/zbox/.ros/maps/mymap"/>
  <arg name="custom_param_file" default="$(find turtlebot_navigation)/param/dummy.yaml"/>


  <include file="$(find bb8_slam_zhou)/launch/turtlebot_hokuyo_xsens.launch" />

  <node name="map_saver" pkg="map_server" type="map_saver" args="-f $(arg mymap_file)" respawn="true" respawn_delay="3" />

  <!-- Map server changeing to my map-->

  <node name="map_server" pkg="map_server" type="map_server" args="$(arg mymap_file).yaml" respawn="true" respawn_delay="5" />

  <include file="$(find turtlebot_navigation)/launch/includes/move_base.launch.xml">
    <arg name="custom_param_file" value="$(arg custom_param_file)"/>
  </include>

</launch>


